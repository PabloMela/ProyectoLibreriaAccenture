@using PrimerPruebaDeLibreria.Models
@model List<Libros>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Libros</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        body, h1, h2, h3, h4, h5 {
            font-family: "Poppins", sans-serif
        }

        body {
            font-size: 16px;
        }

        .w3-half img {
            margin-bottom: -6px;
            margin-top: 16px;
            opacity: 0.8;
            cursor: pointer
        }

            .w3-half img:hover {
                opacity: 1
            }
    </style>
</head>
<body>

    <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-red w3-collapse w3-top w3-large w3-padding" style="z-index:3;width:300px;font-weight:bold;" id="mySidebar">
        <br>
        <a href="javascript:void(0)" onclick="w3_close()" class="w3-button w3-hide-large w3-display-topleft" style="width:100%;font-size:22px">Close Menu</a>
        <div class="w3-container">
            <h3 class="w3-padding-64"><b>Libreria<br>Leopoldo Marechal</b></h3>
        </div>
        <div class="w3-bar-block">
            <a href="~/Home/Index" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Home</a>
            <a href="#" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Libros</a>
            <a href="~/Autor/Mostrar" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Autores</a>
            <a href="~/Genero/Mostrar" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Generos</a>
            <a href="~/Libro/Mostrar" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">EXTRA</a>
            <a href="~/Autor/Mostrar" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">EXTRA</a>
        </div>
    </nav>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:340px;margin-right:40px">

        <!-- Header -->
        <div class="w3-container" style="margin-top:80px" id="showcase">
            <h1 class="w3-jumbo"><b>Libreria <br /> LEOPOLDO MARECHAL</b></h1>
            <h1 class="w3-xxxlarge"><b>LIBROS</b></h1>
            <hr style="width:50px;border:5px solid red" class="w3-round">
        </div>

        <div id="modal01" class="w3-modal w3-black" style="padding-top:0" onclick="this.style.display='none'">
            <span class="w3-button w3-black w3-xxlarge w3-display-topright">×</span>
            <div class="w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
                <img id="img01" class="w3-image">
                <p id="caption"></p>
            </div>
        </div>
        @Html.ActionLink("Agregar","Agregar",null,
            new
            {
                @class = "glyphicon glyphicon-plus right",
                style = "font-size:1.4em",
            })<br /><br />
        <div class="w3-row-padding w3-grayscale">
            @foreach (Libros libro in this.Model)
            {
                <div class="w3-col m4 w3-margin-bottom">
                    <div class="w3-light-grey">
                        <div class="w3-container">
                            <h3>
                                @libro.Titulo &nbsp;&nbsp;&nbsp;@Html.ActionLink(" ","ModificarLibro",new { Id = libro.Id },
                                new
                                {
                                @class = "glyphicon glyphicon-pencil",
                                style = "font-size:1em"
                                })
                                &nbsp;
                                @Html.ActionLink(" ","EliminarLibro",new { Id = libro.Id },
                                new
                                {
                                    @class = "glyphicon glyphicon-trash",
                                    style = "font-size:1em"
                                })
                                &nbsp;
                                @Html.ActionLink(" ","VerLibro",new { Id = libro.Id },
                                new
                                {
                                    @class = "glyphicon glyphicon-menu-hamburger",
                                    style = "font-size:1em"
                                })
                            </h3>
                            <p>@libro.Genero</p>
                            <p class="w3-opacity"> @libro.Descripcion</p>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</body>
</html>